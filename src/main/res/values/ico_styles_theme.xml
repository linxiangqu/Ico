<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.AppCompat.Light.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="IcoFadeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivityFade</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="IcoSlideTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/ActivitySlide</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ActivitySlide" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/ico_slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/ico_slide_out_to_left</item>
        <item name="android:activityCloseExitAnimation">@anim/ico_slide_out_to_right</item>
        <item name="android:activityCloseEnterAnimation">@anim/ico_slide_in_from_left</item>
    </style>

    <style name="ActivityFade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/ico_fade_in</item>
        <item name="android:activityOpenExitAnimation">@anim/ico_fade_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/ico_fade_in</item>
        <item name="android:activityCloseExitAnimation">@anim/ico_fade_out</item>
    </style>
</resources>